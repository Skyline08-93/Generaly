# Режимы работы
TESTNET_MODE=true
DEBUG_MODE=true

# Telegram настройки
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Bybit Testnet ключи
BYBIT_TESTNET_API_KEY=your_testnet_api_key
BYBIT_TESTNET_API_SECRET=your_testnet_api_secret

# Bybit Mainnet ключи (если TESTNET_MODE=false)
BYBIT_MAINNET_API_KEY=your_mainnet_api_key
BYBIT_MAINNET_API_SECRET=your_mainnet_api_secret

# Параметры сканирования
SCAN_INTERVAL=15

# Лимиты сделок
MAX_TRADES_PER_MINUTE=5
MAX_TRADES_PER_HOUR=30
MAX_TRADES_PER_DAY=100

# Тестовые параметры
TESTNET_TARGET_VOLUME=10
TESTNET_MIN_PROFIT=0.01

# Основные параметры
MAINNET_TARGET_VOLUME=100
MAINNET_MIN_PROFIT=0.1